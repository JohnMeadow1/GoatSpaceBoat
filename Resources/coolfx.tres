[gd_resource type="ShaderMaterial" load_steps=2 format=2]

[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;
uniform float magnitude = 1.0;

void fragment() {
	vec4 color;
	
	float x = UV.x * 320.0;
	float y = UV.y * 48.0;
	float height = 48.0;
	
	float f1 = 14.0*sin((x+TIME*12.0-magnitude*10.0 )/24.0*magnitude)*magnitude;
	float f2 = 14.0*sin((x+TIME*12.0-magnitude*10.0 )/24.0*magnitude)*magnitude;
	
	float gain = 0.6+abs(clamp(tan(x/130.0-TIME-magnitude*10.0),-5.0,5.0)) * magnitude;
	
	color.r = -abs(y-(height/2.0)-sin(f1/6.0)*12.0)+gain;
	color.g = -abs(y-(height/2.0)-tan(f1/12.0)*7.5)+gain;
	color.b = -abs(y-(height/2.0)-f2)+gain+color.r/4.0;
	if (color.r < 0.0 && color.g < 0.0 && color.b < 0.0) {
		color.a = 0.0;
	} else {
		color.a = 1.0;
	}
	
	COLOR = color;
}"

[resource]
render_priority = 1
